<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <com.tim.guangjiegou.view.ItemHeaderView 
        android:id="@+id/page_search_result_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <com.youxilua.waterfall.WaterFallView 
	    android:id="@+id/page_search_result_waterfall_scroll"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:scrollbars="vertical" >
	
	    <LinearLayout
	        android:id="@+id/page_search_result_waterfall_container"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent" >
	    </LinearLayout>
	
	</com.youxilua.waterfall.WaterFallView>

</LinearLayout>