<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
    <lib.tim.view.OhTextView 
        android:id="@+id/item_header_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:gravity="center"
        android:text="Title"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/orange"/>
    
    <LinearLayout 
        android:visibility="gone"
        android:id="@+id/item_header_for_remen"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/orange">
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView 
                android:id="@+id/item_header_for_remen_item"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/header_for_remen_item"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <View 
                android:id="@+id/item_header_for_remen_item_border"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/header_for_remen_bottom_border_height"
                android:layout_marginBottom="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"/>
        </LinearLayout>
        <LinearLayout 
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <TextView 
                android:id="@+id/item_header_for_remen_shop"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/header_for_remen_shop"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"/>
            <View 
                android:id="@+id/item_header_for_remen_shop_border"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/header_for_remen_bottom_border_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="1px"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>